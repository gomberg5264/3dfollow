{% extends 'base.html.twig' %}

{% block title %}Liste de mes impressions{% endblock %}

{% block body %}
    <div class="container">
        <header class="bg-primary mb-5 rounded-lg">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-lg-12">
                        <h1 class="display-4 text-white mt-5 mb-2">Liste de mes impressions</h1>
                        <p class="lead mb-5 text-white-50">Premier arriv√©, premier servi... Enfin plus ou moins üòâ</p>
                    </div>
                </div>
            </div>
        </header>

        {% for team in teams %}
            <h2 class="display-6 mt-4 mb-4">
                Impressions par {{ team.creator }}
            </h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Quantit√©</th>
                        <th>Filament</th>
                        <th>Statut</th>
                        <th>Co√ªt mati√®re</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for print_item in print_items_by_team[team.id]|default({}) %}
                    <tr>
                        <td>{{ print_item.name }}</td>
                        <td>{{ print_item.quantity }}</td>
                        <td>{{ print_item.filament }}</td>
                        <td>
                            <span class="badge badge-{{ print_item.isPrinted ? 'success' : 'primary' }}">
                                {{ print_item.isPrinted ? 'Imprim√©' : 'En attente' }}
                            </span>
                        </td>
                        <td>
                            {% set unitCost = null %}
                            {% if print_item.weight and print_item.filament %}
                                {% set unitCost = print_item.filament.computeCostFromWeight(print_item.weight) %}
                            {% endif %}

                            {% if unitCost %}
                                {{ (unitCost * print_item.quantity)|number_format(2) }} ‚Ç¨
                            {% else %}
                                -
                            {% endif %}
                        </td>
                        <td>
                            {% if app.user and app.user.id == print_item.user.id %}
                                <a href="{{ path('print_item_edit', {'id': print_item.id}) }}" class="btn btn-primary">Modifier</a>
                            {% endif %}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="6">Votre liste est vide.</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

            <a href="{{ path('print_item_new', {id: team.id}) }}" class="btn btn-success">Ajouter un √©l√©ment √† imprimer dans la liste de {{ team.creator }}</a>

            {% if not loop.last %}
                <hr class="mt-4" />
            {% endif %}
        {% endfor %}
    </div>
{% endblock %}
