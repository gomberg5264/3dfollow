{% extends 'default_page.html.twig' %}

{% block title %}Liste des demandes de mon groupe{% endblock %}
{% block page_title %}Les demandes de mon groupe{% endblock %}

{% block page_body %}
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Utilisateur</th>
                <th>Quantité</th>
                <th>Statut</th>
                <th>Coût matière</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for print_request in print_requests %}
                <tr>
                    <td>{{ print_request.name }}</td>
                    <td>{{ print_request.user.username }}</td>
                    <td>{{ print_request.quantity }}</td>
                    <td>
                        <span class="badge badge-{{ print_request.isPrinted ? 'success' : 'primary' }}">
                            {{ print_request.isPrinted ? 'Imprimé' : 'En attente' }}
                        </span>
                    </td>
                    <td>
                        {% set cost = print_request.getTotalCost() %}
                        {% if cost %}
                            {{ cost|number_format(2) }} €
                        {% else %}
                            -
                        {% endif %}
                    </td>
                    <td>
                        <a href="{{ path('print_request_show', {'id': print_request.id}) }}" class="btn btn-primary">Afficher</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Votre liste est vide.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
