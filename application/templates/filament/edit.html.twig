{% extends 'default_page.html.twig' %}

{% block title %}{{ 'filament.edit.meta_title'|trans }}{% endblock %}
{% block page_title %}{{ 'filament.edit.page_title'|trans }}{% endblock %}

{% block page_body %}
    {% if filament.printObjects|length > 0 %}
        <p class="text-black-50 mt-5">{{ 'filament.edit.not_deletable'|trans }}</p>
    {% endif %}

    {{ include('filament/_form.html.twig', {'button_label': 'common.action.edit'|trans}) }}

    <a href="{{ path('filament_index') }}">{{ 'common.action.back_to_list'|trans }}</a>

    {% if filament.printObjects|length < 1 %}
        {{ include('filament/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
