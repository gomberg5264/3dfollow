{% extends 'base.html.twig' %}

{% block title %}{{ 'home.index.meta_title'|trans }}{% endblock %}
{% block metaDescription %}{{ 'home.index.meta_description'|trans }}{% endblock %}

{% block body %}
    <header class="masthead">
        <div class="container">
            <div class="intro-text">
                <div class="intro-heading text-uppercase">
                    <h1>{{ 'home.index.header.catchline'|trans|raw }}</h1>
                </div>
                <a class="btn btn-primary btn-xl text-uppercase js-scroll-trigger" href="#features">{{ 'home.index.header.cta'|trans }}</a>
            </div>
        </div>
    </header>

    <div class="container mt-5">
        <h2 id="features" class="text-center text-uppercase">{{ 'home.index.section.features.title'|trans }}</h2>

        <div class="container mb-5">
            <div class="row">
                <div class="mt-4 col-12 col-md-6 col-lg-4">
                    <div class="h-100">
                        <div class="text-center display-4">
                            <span class="fa-stack fa-1x">
                                <i class="fas fa-circle fa-stack-2x text-primary"></i>
                                <i class="fas fa-tape fa-stack-1x"></i>
                            </span>
                        </div>
                        <h3 class="text-center mt-3">{{ 'home.index.section.features.stock.name'|trans }}</h3>
                        <p class="mt-4">{{ 'home.index.section.features.stock.description'|trans|raw }}</p>
                    </div>
                </div>
                <div class="mt-4 col-12 col-md-6 col-lg-4">
                    <div class="h-100">
                        <div class="text-center display-4">
                            <span class="fa-stack fa-1x">
                                <i class="fas fa-circle fa-stack-2x text-primary"></i>
                                <i class="fas fa-history fa-stack-1x"></i>
                            </span>
                        </div>
                        <h3 class="text-center mt-3">{{ 'home.index.section.features.history.name'|trans }}</h3>
                        <p class="mt-4">{{ 'home.index.section.features.history.description'|trans|raw }}</p>
                    </div>
                </div>
                <div class="mt-4 col-12 col-md-6 col-lg-4">
                    <div class="h-100">
                        <div class="text-center display-4">
                            <span class="fa-stack fa-1x">
                                <i class="fas fa-circle fa-stack-2x text-primary"></i>
                                <i class="fas fa-lock fa-stack-1x"></i>
                            </span>
                        </div>
                        <h3 class="text-center mt-3">{{ 'home.index.section.features.privacy.name'|trans }}</h3>
                        <p class="mt-4">{{ 'home.index.section.features.privacy.description'|trans|raw }}</p>
                    </div>
                </div>
                <div class="mt-4 col-12 col-md-6 col-lg-4">
                    <div class="h-100">
                        <div class="text-center display-4">
                            <span class="fa-stack fa-1x">
                                <i class="fas fa-circle fa-stack-2x text-primary"></i>
                                <i class="fas fa-tags fa-stack-1x"></i>
                            </span>
                        </div>
                        <h3 class="text-center mt-3">{{ 'home.index.section.features.cost.name'|trans }}</h3>
                        <p class="mt-4">{{ 'home.index.section.features.cost.description'|trans|raw }}</p>
                    </div>
                </div>
                <div class="mt-4 col-12 col-md-6 col-lg-4">
                    <div class="h-100">
                        <div class="text-center display-4">
                            <span class="fa-stack fa-1x">
                                <i class="fas fa-circle fa-stack-2x text-primary"></i>
                                <i class="fas fa-users fa-stack-1x"></i>
                            </span>
                        </div>
                        <h3 class="text-center mt-3">{{ 'home.index.section.features.team.name'|trans }}</h3>
                        <p class="mt-4">{{ 'home.index.section.features.team.description'|trans|raw }}</p>
                    </div>
                </div>
                <div class="mt-4 col-12 col-md-6 col-lg-4">
                    <div class="h-100">
                        <div class="text-center display-4">
                            <span class="fa-stack fa-1x">
                                <i class="fas fa-circle fa-stack-2x text-primary"></i>
                                <i class="fas fa-shopping-cart fa-stack-1x"></i>
                            </span>
                        </div>
                        <h3 class="text-center mt-3">{{ 'home.index.section.features.free.name'|trans }}</h3>
                        <p class="mt-4">{{ 'home.index.section.features.free.description'|trans|raw }}</p>
                    </div>
                </div>
            </div>
        </div>

        <div style="height: 1em;"></div>

        <div class="row my-5 justify-content-center align-items-center">
            <div class="col-md-5">
                <img src="{{ asset('images/filament-stock.jpg') }}" class="border rounded img-fluid" alt="{{ 'home.index.section.stock.title'|trans }}" />
            </div>
            <div class="col-md-7">
                <div class="px-3 py-5 text-center h-100">
                    <h2 class="text-uppercase">
                        <i class="fas fa-tape"></i>
                        {{ 'home.index.section.stock.title'|trans }}
                    </h2>
                    <p class="mt-3">
                        {{ 'home.index.section.stock.content'|trans|raw }}
                    </p>
                </div>
            </div>
        </div>

        <div style="height: 1em;"></div>

        <div class="row my-5 justify-content-center align-items-center">
            <div class="col-md-7">
                <div class="px-3 py-5 text-center h-100">
                    <h2 class="text-uppercase">
                        <i class="fas fa-file-upload"></i>
                        {{ 'home.index.section.upload.title'|trans }}
                    </h2>
                    <p class="mt-3">
                        {{ 'home.index.section.upload.content'|trans|raw }}
                    </p>
                </div>
            </div>
            <div class="col-md-5">
                <img src="{{ asset('images/gcode-upload.jpg') }}" class="border rounded img-fluid" alt="{{ 'home.index.section.upload.title'|trans }}" />
            </div>
        </div>

        <div style="height: 1em;"></div>

        <div class="row my-5 justify-content-center align-items-center">
            <div class="col-md-12">
                <div class="px-3 py-5 text-center h-100">
                    <h2 class="text-uppercase">
                        <i class="fas fa-user-secret"></i>
                        {{ 'home.index.section.privacy.title'|trans }}
                    </h2>
                    <p class="mt-3">
                        {{ 'home.index.section.privacy.content'|trans|raw }}
                    </p>
                </div>
            </div>
        </div>

        <div style="height: 1em;"></div>

        <h2 class="text-center text-uppercase mt-5">
            <i class="far fa-grin-hearts"></i>
            {{ 'home.index.section.free.title'|trans }}
        </h2>

        <p class="text-center mt-3">
            {{ 'home.index.section.free.content'|trans|raw }}
        </p>

        <div class="text-center mt-5 mb-5">
            <a class="btn btn-primary btn-xl text-uppercase" href="{{ path('dashboard_index') }}">{{ 'home.index.section.free.cta'|trans }}</a>
        </div>
    </div>
{% endblock %}
