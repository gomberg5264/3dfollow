<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>{% block title %}Liste des objets à imprimer en 3D!{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset('favicon.png') }}" />
        {% block stylesheets %}
            <!-- Latest compiled and minified CSS -->
            <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
        {% endblock %}
    </head>
    <body>
        <nav class="navbar navbar-expand-lg navbar-light">
            <div class="container">
                <a class="navbar-brand" href="{{ path('print_request_index') }}">
                    <img src="{{ asset('favicon.png') }}" alt="" width="50" />
                    <span>3D Follow</span>
                </a>

                {% if app.user %}
                    <div class="collapse navbar-collapse">
                        <ul class="navbar-nav ml-auto">
                            {% if is_granted('ROLE_PRINTER') %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('filament_index') }}">Mes filaments</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('print_object_index') }}">Mes impressions</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('team_index') }}">Mon groupe</a>
                                </li>
                            {% endif %}
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    {{ app.user.username }}
                                </a>
                                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="{{ path('print_request_index') }}">Ma liste de souhait</a>
                                    <a class="dropdown-item" href="{{ path('account_index') }}">Mon compte</a>
                                    <div class="dropdown-divider"></div>
                                    <a class="dropdown-item" href="{{ path('security_logout') }}">Se déconnecter</a>
                                </div>
                            </li>
                        </ul>
                    </div>
                {% endif %}
            </div>
        </nav>

        {% if app.session is not null and app.session.started %}
            {% set _flash_messages = app.session.flashbag.all %}

            {% if _flash_messages|length > 0 %}
                <div id="flash-messages" class="container">
                    {% for label, messages in _flash_messages %}
                        {% for message in messages %}
                            <div class="alert alert-{{ label }} alert-dismissible fade show">
                                {{ message|trans|striptags }}

                                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                        {% endfor %}
                    {% endfor %}
                </div>
            {% endif %}
        {% endif %}

        {% block body %}{% endblock %}

        <footer class="footer mt-auto mt-5 py-3">
            <div class="container">
                <p class="m-0 text-center text-black-50">Copyright &copy; 3D Follow {{ date()|date('Y') }}</p>
            </div>
        </footer>

        {% block javascripts %}
            <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js" integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo" crossorigin="anonymous"></script>
            <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js" integrity="sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6" crossorigin="anonymous"></script>
        {% endblock %}
    </body>
</html>
