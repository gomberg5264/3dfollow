{% extends 'default_page.html.twig' %}

{% block title %}{{ 'print_request.edit.meta_title'|trans }}{% endblock %}
{% block page_title %}{{ 'print_request.edit.page_title'|trans }}{% endblock %}

{% block page_body %}
    {% if print_request.isPrinted %}
        <p class="text-black-50 mt-5">{{ 'print_request.edit.not_deletable'|trans }}</p>
    {% endif %}

    {{ include('print_request/_form.html.twig', {'button_label': 'common.action.edit'|trans}) }}

    <a href="{{ path('print_request_index') }}">{{ 'common.action.back_to_list'|trans }}</a>

    {% if not print_request.isPrinted %}
        {{ include('print_request/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
