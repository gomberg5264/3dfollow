<form method="post" class="mt-5" action="{{ path('filament_delete', {'id': filament.id}) }}" onsubmit="return confirm('{{ 'filament.delete.confirm'|trans }}');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('filament-delete-' ~ filament.id) }}">
    <button class="btn btn-danger">{{ 'common.action.delete'|trans }}</button>
</form>
