{% extends 'base.html.twig' %}

{% block title %}{{ 'home.index.meta_title'|trans }}{% endblock %}
{% block metaDescription %}{{ 'home.index.meta_description'|trans }}{% endblock %}

{% block body %}
    <div class="container">
        <header class="bg-primary mb-5 rounded-lg">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-lg-12 pt-5 pb-5 text-center text-white">
                        <h1 class="display-4">{{ 'home.index.header.title'|trans }}</h1>
                        <h2 class="text-white mt-5">{{ 'home.index.header.catchline'|trans }}</h2>
                    </div>
                </div>
            </div>
        </header>

        <h2 class="text-center">{{ 'home.index.section.features.title'|trans }}</h2>

        <div class="container">
            <div class="row">
                <div class="mt-4 col-12 col-md-6 col-lg-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="text-center display-4">
                                <i class="fas fa-history"></i>
                            </div>
                            <h3 class="text-center mt-3">{{ 'home.index.section.features.history.name'|trans }}</h3>
                            <p class="mt-4">{{ 'home.index.section.features.history.description'|trans|raw }}</p>
                        </div>
                    </div>
                </div>
                <div class="mt-4 col-12 col-md-6 col-lg-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="text-center display-4">
                                <i class="fas fa-tape"></i>
                            </div>
                            <h3 class="text-center mt-3">{{ 'home.index.section.features.stock.name'|trans }}</h3>
                            <p class="mt-4">{{ 'home.index.section.features.stock.description'|trans|raw }}</p>
                        </div>
                    </div>
                </div>
                <div class="mt-4 col-12 col-md-6 col-lg-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="text-center display-4">
                                <i class="fas fa-tags"></i>
                            </div>
                            <h3 class="text-center mt-3">{{ 'home.index.section.features.cost.name'|trans }}</h3>
                            <p class="mt-4">{{ 'home.index.section.features.cost.description'|trans|raw }}</p>
                        </div>
                    </div>
                </div>
                <div class="mt-4 col-12 col-md-6 col-lg-3">
                    <div class="card h-100">
                        <div class="card-body">
                            <div class="text-center display-4">
                                <i class="fas fa-users"></i>
                            </div>
                            <h3 class="text-center mt-3">{{ 'home.index.section.features.team.name'|trans }}</h3>
                            <p class="mt-4">{{ 'home.index.section.features.team.description'|trans|raw }}</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <h2 class="text-center mt-5">{{ 'home.index.section.try.title'|trans }}</h2>

        <div class="text-center mt-3 mb-5">
            <a class="btn btn-primary" href="{{ path('dashboard_index') }}">{{ 'home.index.section.try.cta'|trans }}</a>
        </div>
    </div>
{% endblock %}
