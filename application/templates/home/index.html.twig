{% extends 'base.html.twig' %}

{% block title %}3D Follow{% endblock %}

{% block body %}
    <div class="container">
        <header class="bg-primary mb-5 rounded-lg">
            <div class="container h-100">
                <div class="row h-100 align-items-center">
                    <div class="col-lg-12 pt-5 pb-5 text-center text-white">
                        <h1 class="display-4">3D Follow</h1>
                        <h2 class="text-white mt-5">For everything happening outside your printer</h2>
                    </div>
                </div>
            </div>
        </header>

        <h2 class="text-center">Features</h2>

        <div class="container">
            <div class="card-deck mt-4">
                <div class="card">
                    <div class="card-body">
                        <div class="text-center display-4">
                            <i class="fas fa-history"></i>
                        </div>
                        <h3 class="text-center mt-3">History</h3>
                        <p class="mt-4">Keep an <strong>history of all your prints</strong>: material, cost, g-code, &hellip;</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="text-center display-4">
                            <i class="fas fa-tape"></i>
                        </div>
                        <h3 class="text-center mt-3">Filament stock</h3>
                        <p class="mt-4">Know the <strong>quantity of filament it remains</strong> for each of your spool.</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="text-center display-4">
                            <i class="fas fa-tags"></i>
                        </div>
                        <h3 class="text-center mt-3">Cost estimation</h3>
                        <p class="mt-4"><strong>Estimate</strong> the quantity and cost of <strong>material used</strong> by each print.</p>
                    </div>
                </div>
                <div class="card">
                    <div class="card-body">
                        <div class="text-center display-4">
                            <i class="fas fa-users"></i>
                        </div>
                        <h3 class="text-center mt-3">Team requests</h3>
                        <p class="mt-4">Let your <strong>family / friends / customers</strong> send you their <strong>print wishes</strong>. Invite them to join your team.</p>
                    </div>
                </div>
            </div>
        </div>

        <h2 class="text-center mt-5">Try it, it's free!</h2>

        <div class="text-center mt-3 mb-5">
            <a class="btn btn-primary" href="{{ path('dashboard_index') }}">Go to the app</a>
        </div>
    </div>
{% endblock %}
